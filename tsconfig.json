{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "declaration": true,
    "target": "ES6",
    "jsx": "react",
    "module": "CommonJS",
    "outDir": "./out",
    "moduleResolution": "node",
    "sourceMap": true,

  },
  "include": [
    "./src/**/*"
  ]
}